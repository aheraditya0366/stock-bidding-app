rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // DEVELOPMENT RULES - Very permissive for testing
    // TODO: Tighten these rules for production

    // Allow all operations for authenticated users (development only)
    match /{document=**} {
      allow read, write: if request.auth != null;
    }

    // Specific rules for better organization (these are overridden by the catch-all above)

    // Users can read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }

    // Bids - allow all operations for authenticated users
    match /bids/{bidId} {
      allow read, write, create, update, delete: if request.auth != null;
    }

    // Auctions - allow all operations for authenticated users
    match /auctions/{auctionId} {
      allow read, write, create, update, delete: if request.auth != null;
    }

    // Stocks - allow all operations for authenticated users
    match /stocks/{stockId} {
      allow read, write, create, update, delete: if request.auth != null;
    }
  }
}
